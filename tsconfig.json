{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["./src/stories/**/*", "./src/**/*"],
  "exclude": ["node_modules"]
}

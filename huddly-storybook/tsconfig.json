{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/*",
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/stories/**/*",
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}
